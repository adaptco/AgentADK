# ── A2A Digital Twin — Environment Variables ──────────────────────────────────
# Copy this file to .env and fill in your values.

# OpenAI (required for embeddings)
OPENAI_API_KEY=sk-...

# Airtable (required for task management)
AIRTABLE_API_KEY=pat...
AIRTABLE_BASE_ID=app...

# Perplexity (optional — web search fallback)
PERPLEXITY_API_KEY=pplx-...

# Microsoft Office 365 (optional — handoff checkpoints)
OFFICE_TENANT_ID=
OFFICE_CLIENT_ID=
OFFICE_CLIENT_SECRET=
OFFICE_USER_EMAIL=
HANDOFF_EMAIL=

# MCP Server Configuration
MCP_TRANSPORT=stdio
MCP_HOST=0.0.0.0
MCP_PORT=8080

# GitHub Webhook (for webhook_server.py)
GITHUB_WEBHOOK_SECRET=

# Repo root (auto-detected if not set)
# A2A_REPO_ROOT=/path/to/A2A_MCP
